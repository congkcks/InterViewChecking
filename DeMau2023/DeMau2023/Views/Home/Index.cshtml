@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/Layoutde.cshtml";
}
<!-- Begin Main -->
<div class="main">
	<div class="content">
		<!-- Begin New Product -->
		<div class="content_top">
			<div class="heading">
				<h3>New Products</h3>
			</div>
			<div class="see">
				<p><a href="#">See all Products</a></p>
			</div>
			<div class="clear"></div>
		</div>
		<div class="section group" id="noidung">
			@foreach(var item in ViewBag.Bai1)
			{
				<div class="grid_1_of_4 images_1_of_4">
					<a href="preview.html"><img src="@Url.Content("./demau/images/"+item.Anh)" alt="" /></a>
					<h2>@item.TenHang</h2>
					<div class="price-details">
						<div class="price-number">
							<p><span class="rupees">@item.Gia</span></p>
						</div>
						<div class="add-cart">
							<h4><a href="preview.html">Add to Cart</a></h4>
						</div>
						<div class="clear"></div>
					</div>
				</div>
			}
		</div>
		<!-- End New Product -->
	</div>
</div>
<!-- End Main -->
<script>
	$(document).ready(function () {
		$(".cau4").click(function () {
			var keyword = $(this).text(); // Lấy văn bản từ thẻ được click
			console.log(keyword);

			$.ajax({
				url: '@Url.Action("PhanLoaihang", "Home")',  // URL đến action trong controller
				type: 'GET',
				data: { tenloai: keyword },  // Truyền giá trị keyword vào tham số 'tenloai'
				success: function (data) {
					// Chèn nội dung trả về từ server vào phần tử có class "section-group"
					console.log(data)
					var html = '';
					$.each(data, function (index,product) {
						html += '<div class="grid_1_of_4 images_1_of_4">'+
						                            '<a href="preview.html"><img src="./demau/images/'+product.anh+'" alt="" /></a>'+
                            '<h2>'+product.tenHang+'</h2>'+
                            '<div class="price-details">'+
                            '<div class="price-number">'+
                            '<p><span class="rupees">'+product.gia+'</span></p>'+
                            '</div>'+
                            '<div class="add-cart">'+
                            '<h4><a href="preview.html">Add to Cart</a></h4>'+
                            '</div>'+
                            '<div class="clear"></div>'+
                            '</div>'+
                            '</div>';

					});
					$("#noidung").html(html);
					
				},
				error: function (xhr, status, error) {
					console.error("Error: " + error);
				}
			});
		});
		$("#cau41").keyup(function () {
			var keyword = $(this).val(); // Lấy văn bản từ thẻ được click
			console.log(keyword);

			$.ajax({
				url: '@Url.Action("TimKiem", "Home")',  // URL đến action trong controller
				type: 'GET',
				data: { key: keyword },  // Truyền giá trị keyword vào tham số 'tenloai'
				success: function (data) {
					// Chèn nội dung trả về từ server vào phần tử có class "section-group"
					console.log(data)
					var html = '';
					$.each(data, function (index, product) {
						html += '<div class="grid_1_of_4 images_1_of_4">' +
							'<a href="preview.html"><img src="./demau/images/' + product.anh + '" alt="" /></a>' +
							'<h2>' + product.tenHang + '</h2>' +
							'<div class="price-details">' +
							'<div class="price-number">' +
							'<p><span class="rupees">' + product.gia + '</span></p>' +
							'</div>' +
							'<div class="add-cart">' +
							'<h4><a href="preview.html">Add to Cart</a></h4>' +
							'</div>' +
							'<div class="clear"></div>' +
							'</div>' +
							'</div>';

					});
					$("#noidung").html(html);

				},
				error: function (xhr, status, error) {
					console.error("Error: " + error);
				}
			});
					
		});


	});


</script>



